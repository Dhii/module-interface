{
    "name": "dhii/module-interface",
    "description": "Interfaces for modules",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Dhii Team",
            "email": "development@dhii.co"
        }
    ],
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.0",
        "psr/container": "^1.0",
        "container-interop/service-provider": "^0.4",
        "dhii/containers": "dev-task/more-containers"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0 || ^7.0",
        "codeclimate/php-test-reporter": "<=0.3.2"
    },
    "autoload": {
        "psr-4": {
            "Mecha\\Modular\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mecha\\Modular\\UnitTest\\": "test/unit",
            "Mecha\\Modular\\FuncTest\\": "test/functional",
            "Mecha\\Modular\\Test\\": "test/stubs"
        }
    },
    "scripts": {
        "test": "phpunit",
        "csfix": "php-cs-fixer fix -vvv"
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "0.1.x-dev",
            "0.2.x": "0.2.x-dev"
        }
    }
}
